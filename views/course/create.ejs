                <h1>New Course</h1>
               
                <form action="/courses" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input placeholder="name of course" name="name" value="" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="author">Author</label>
                    <input placeholder="author of course" name="author" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input placeholder="price of course" name="price" type="number" class="form-control">
                </div>

                <button class="btn btn-primary btn-block">Add</button>
            </form>

